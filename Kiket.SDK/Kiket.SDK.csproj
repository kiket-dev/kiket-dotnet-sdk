<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Kiket.SDK</PackageId>
    <Version>0.1.0</Version>
    <Authors>Kiket Team</Authors>
    <Company>Kiket</Company>
    <Product>Kiket SDK for .NET</Product>
    <Description>Official .NET SDK for building Kiket extensions</Description>
    <PackageProjectUrl>https://github.com/kiket/kiket-dotnet-sdk</PackageProjectUrl>
    <RepositoryUrl>https://github.com/kiket/kiket-dotnet-sdk</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>kiket;extensions;webhooks;workflow;automation</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="YamlDotNet" Version="15.1.0" />
  </ItemGroup>

</Project>
